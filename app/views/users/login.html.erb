<%# Log in form is a div with username and password fields and a submit button%>
<div>
  <h1>Log in</h1>
  <%= form_tag(:action => 'login_attempt') do %>
   <p>Username:</br> 
   <%= text_field_tag :login_username %></p>
   <p>Password:</br> 
   <%= password_field_tag :login_password %></p>
   <p><%= submit_tag("Log In") %></p>
  <% end %>
</div>

