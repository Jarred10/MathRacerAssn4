<%= form_for(@game) do |f| %>

  <%# Show any errors %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# Show a label and a field for all the game credentials %>
  <div class="field">
    <p><%= f.label :gameid %></p>
    <p><%= f.text_field :gameid %></p>
  </div>
  
  <div class="field">
    <p><%= f.label :user1 %><br>
    <p><%= f.text_field :user1 %></p>
  </div>
  
  <div class="field">
    <p><%= f.label :user1progress %></p>
    <p><%= f.number_field :user1progress %></p>
  </div>
  
  <div class="field">
    <p><%= f.label :user2 %></p>
    <p><%= f.text_field :user2 %></p>
  </div>
  
  <div class="field">
    <p><%= f.label :user2progress %></p>
    <p><%= f.number_field :user2progress %></p>
  </div>
  
  <%# Submit button %>
  <div class="actions">
    <p><%= f.submit %></p>
  </div>
  
<% end %>
